<Window x:Class="Stardew_Valley_Save_Editor.OpenGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stardew_Valley_Save_Editor"
        mc:Ignorable="d"
        Title="Open saved game" Loaded="Window_Loaded" SizeToContent="Height" Topmost="True" Width="300" ResizeMode="NoResize" Icon="appicon.ico">
    <Grid Margin="0,0,0,10">
        <ComboBox x:Name="comboBox" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button x:Name="openButton" Content="Open" HorizontalAlignment="Right" Margin="0,37,90,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="openButton_Click"/>
        <Button x:Name="closeButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,37,10,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="closeButton_Click"/>

    </Grid>
</Window>
